# funciones
nombre = "Javier Juan Carlos Blanco"   # variable global


def funcionprimera(nom):
    texto1 = " Espero que estes bien"  # variable local de la funcion funcionprimera
    print("Hola " + nom + texto1)


#funcionprimera("daniel") # le estoy mandando como parametro a la funcion el string daniel
#funcionprimera("pedro")
parametro = ""
while not parametro == "lizmar" :
    parametro = input(" como te llamas")
    funcionprimera(parametro) # puedo mandar como parametro o argumento una variable
print("mandaste lizmar")
